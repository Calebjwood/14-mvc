<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/css/style.css" />
  </head>
  <body class="bg-gross-green">
    <div class="flex-column justify-space-around">
      <header class="row bg-dark-red pb-3">
        <nav class="row pb-3">
          <a
            class="gross-green nav-buttons col-1 fs-4"
            href="/homepage"
          >Home</a>
          <a
            class="gross-green nav-buttons col-1 fs-4"
            href="/dashboard"
          >Dashboard</a>
          {{#if logged_in}}
            <a
              id="logout"
              class="gross-green nav-buttons fs-4 col-1"
              href=""
            >logout</a>
          {{else}}
            <a
              class="gross-green nav-buttons fs-4 col-1"
              href="/login"
            >login</a>
          {{/if}}
        </nav>
        <h1 class="col-2 bg-gross-green text-left ms-5 ps-5 border rounded">
          The Tech Blog
        </h1>
      </header>
        <main class="row justify-content-center">
      {{{ body }}}
      </main>
      <footer class="row justify-content-center pt-5">  
        {{#if logged_in}}
        <div class="col-1 post-border text-center bg-dark-red">
        <a class=" fs-4 text-gray nav-buttons" href="/new-post">+New Post</a>
        {{/if}}
      </footer>
    </div>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>